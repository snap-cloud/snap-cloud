<div class="row">
  <div class="col">
    <h2><%= @user.username %>'s Profile</h2>
  </div>
  <div style="float:right;">
    <% if not @user == current_user %>
    <a id="report-profile" class="btn btn-danger" diasbled href="#">
      <i class="fa fa-flag-o"></i>
      Report
    </a>
    <% else %>
    <!-- TODO: Replace with link_to -->
    <a id="edit-profile"
      class="btn btn-primary"
      href="/users/<%= @user.id %>/edit">
      <i class="fa fa-cog"></i>
      Edit
    </a>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="pure-g profile-wrapper">
    <div class="pure-u-1-3" id="basic-info">
      <div class="profile-content">
        <%= image_tag @user.avatar.url(:thumb) %>
      </div>
    </div>
    <div class="pure-u-2-3" id="">
      <h3 id="about">About Me</h3>
      <div class="profile-content">
        <h4 class="profile-content-text">
          <%= @about_me %>
        </h4>
      </div>
    </div>
  </div>

  <div class="pure-g profile-wrapper">
    <div class="pure-u-1-1">
      <h3>My Projects</h3>
      <div class="profile-content">
        <h4 class="profile-content-text">
        </h4>
        <%= render 'projects/projectlist', locals: {projects: @projects} %>
      </div>
    </div>
  </div>
</div>
