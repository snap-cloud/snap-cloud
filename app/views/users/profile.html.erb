<% content_for :head do %>
  <%= stylesheet_link_tag "profile", "marketing" %>
<% end %>

<h2 id="username"><%= current_user.username %></h2>
<div class="pure-g profile-wrapper">
  <%= form_for(@user, multipart: true) do |f| %>
  <div class="pure-u-1-3" id="basic-info">
    <h3 id="about">About</h3>
    <a href="#">Edit</a>
    <div class="profile-content">
      <%= image_tag @user.avatar.url(:preview) %>
      <div>
	<%= f.label :avatar %>
	<%= f.file_field :avatar %>
      </div>
    </div>
  </div>
  <div class="pure-u-2-3" id="">
    <div class="profile-content">
      <h4 class="profile-content-text">
	<%= @about_me  %>
      </h4>
    </div>
  </div>
  <div>
    <%= f.submit 'Update' %>
  </div>
  <% end %>
  <div class="pure-u-1-3">
    <h3>Activity</h3>
    <div class="profile-content">
      <h4 class="profile-content-text">
      </h4>
    </div>
  </div>
  <div class="pure-u-2-3">
    <h3>My Projects</h3>
    <div class="profile-content">
      <h4 class="profile-content-text">
      </h4>
    </div>
  </div>
</div>
