<div class="custom-wrapper pure-g home-menu" id="menu">
  <div class="pure-u-1 pure-u-md-1-12">
    <div class="pure-menu">
      <a href="#" class="custom-toggle" id="toggle"><s class="bar"></s><s class="bar"></s></a>
    </div>
  </div>

  <div class="pure-u-1 pure-u-md-11-24">
    <div class="pure-menu pure-menu-horizontal pure-menu-fixed">
      <ul class="pure-menu-list" id="splash-menu">
        <li class="pure-menu-item">
          <a href=<%= home_path %> class="pure-menu-heading">
            <%= image_tag "snap-logo.png", alt: "Snap! logo", class: "run-snap-logo" %>
          </a>
        </li>
        <li class="pure-menu-item">
          <%= link_to "Create", "/snap", class: "pure-menu-link" %>
        </li>
        <li class="pure-menu-item">
          <%= link_to "Get Started", help_path, class: "pure-menu-link" %>
        </li>
        <li class="pure-menu-item">
          <%= link_to "About", about_path, class: "pure-menu-link" %>
        </li>
      </ul>
    </div>
  </div>

    <div class="pure-u-1 pure-u-md-11-24">
      <div class="pure-menu pure-menu-horizontal pure-menu-fixed custom-menu-3 custom-can-transform">
        <ul class="pure-menu-list">
          <li class="pure-menu-item">
            <%= search_form_for Project.search, class: 'pure-form' do |f| %>
            <%= f.search_field :title_or_notes_or_user_username_cont,
            placeholder: "Search", class: "search pure-input-rounded" %>
            <button type="submit" class="button-small button-search pure-button">
              Search
            </button>
            <% end %>
          </li>
          <% if current_user %>
          <li class="pure-menu-item">
            <%= link_to "Profile", user_profile_path(current_user.id), class: "pure-menu-link" %>
          </li>
          <li class="pure-menu-item">
            <%= link_to "Logout", logout_path, class: "pure-menu-link" %>
          </li>
          <% else %>
          <li class="pure-menu-item">
            <%= link_to "Sign Up", signup_path, class: "pure-menu-link" %>
          </li>
          <li class="pure-menu-item">
            <%= link_to "Sign In", login_path, class: "pure-menu-link" %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>