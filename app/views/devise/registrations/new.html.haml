.pure-u-1.pure-u-md-1-3.pure-u-lg-10-24
  %div
.pure-u-1.pure-u-md-1-3.pure-u-lg-4-24
  %h2 Sign Up
  = form_for(resource, as: resource_name, url: registration_path(resource_name),
      html: {class: "pure-form pure-form-stacked" } ) do |f|
    %fieldset
      = devise_error_messages!
      %legend
        Welcome, to
        %span.snap
          snap
      = f.label :username
      = f.text_field :username, autofocus: true, class: 'pure-u-1'
      = f.label :email
      = f.email_field :email, autofocus: true, class: 'pure-u-1'
      = f.label :password
      - if @validatable
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "off", class: 'pure-u-1'
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off", class: 'pure-u-1'
      %label
        When were you born?
      = f.date_select(:birthdate,
               options = { start_year: DateTime.now.year - 5, end_year: DateTime.now.year - 75, order: [:month, :day, :year], include_blank: true},
               html_options = { class: 'select-date'})
      .clearfix
      %em
        If you are less than 13 years old, you must have you parent's permission, and use your parent's email address.
    
      .pure-input-group
        %label.checkbox{ for: :tos_agree }
          = f.check_box :remember_me, class: "checkbox"
          Do you agree to our Terms of Service?

      .actions
        %br/
        = f.submit "Sign up", class: 'pure-button pure-input-1-2 pure-button-primary'
        %br
        = render "devise/shared/links"
.pure-u-1.pure-u-md-1-3.pure-u-lg-10-24
  %div
