<!-- TODO: put in the partial for the header -->
<div style="text-align: center; margin-left: auto; margin-right: auto; background: black; color: white;">
	<div class="pure-button" style="float: left; background: darkgray;" ><%= @project.is_public ? "Public Project" : "Private Project"%></div>
	<div id="project-title" style="font-size: 200%"> <%= @project.title %> </div>
	<a class="pure-button pure-button-primary" style="float: right" href="/projects/<%= @project.id %>/edit">Edit</a>
</div>

<div class="pure-g" style="margin-left: auto; margin-right: auto; background: white">
    <div class="pure-u-1 pure-u-md-3-4" id="project-description" style="background: #f6f6f6">
    	<table class="pure-table" style="width: 100%; height: 100%;">
    		<thead>
    			<tr>
    				<th>Project Details</th>
    			</tr>
    		</thead>
    		<tbody>
    			<tr> <td> <pre class="code"> <%= @project.notes %> </pre> </td> </tr>
    		</tbody>
    	</table>
    </div>

    <div class="pure-u-1 pure-u-md-1-24" style="background: white"></div>

    <div class="pure-u-1 pure-u-md-5-24" style="background-image:url(data:image/gif;base64,<%= @project.thumbnail %>">
    	<a style="font-size: 150%; width: 100%; height: 100%; display: block;" href="#">
    	<!-- put a binary base64 encoded thumbnail as the play button -->
    	<!-- <img src="data:image/gif;base64,<%= @project.thumbnail %>" class="pure-img" > -->
    	Try it!
    	</a>
    </div>

	<div class="pure-u-1 pure-u-md-3-4" id="comment-list">
    	<table class="pure-table pure-table-horizontal" style="width: 100%; height: 100%;">
	    	<thead>
		        <tr>
		            <th>Comments</th>
		            <th></th>
		        </tr>
		    </thead>

		    <tbody>
			    <tr>
		            <td>Pic</td>
		            <td>Comment (make this into a loop when we have comments in the database)</td>
		        </tr>	
		    </tbody>
		</table>

    </div>

	<div class="pure-u-1 pure-u-md-1-24" style="background: white"></div>

	<div class="pure-u-1 pure-u-md-5-24" id="collaborator-list">
    	<table class="pure-table pure-table-horizontal" style="width: 100%; height: 100%;">
	    	<thead>
		        <tr>
		            <th>Collaborators</th>
		            <th></th>
		        </tr>
		    </thead>

		    <tbody>
			    <tr>
		            <td>Pic</td>
		            <td>Collaborator Name (make this into a loop when we have collaborators in the database)</td>
		        </tr>	
		    </tbody>
	    </table>

    </div>

</div>